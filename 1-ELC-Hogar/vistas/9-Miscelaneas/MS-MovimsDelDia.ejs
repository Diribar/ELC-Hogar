<%- include("FM-0-TituloPrincipal") %>
<section id="tabla">
	<table>
		<thead>
			<tr>
				<th class="cliente">Visitas</th>
				<th class="fecha">Hora</th>
				<th class="ruta">Ruta</th>
			</tr>
		</thead>
		<tbody>
			<% for (let navegDia of navegsDia) { %>
			<tr <% if (!navegDia.cantPers) { %>class="ocultar"<% } %>>
				<!-- Persona -->
				<td class="cliente <%= navegDia.esUser ? 'esU' : 'esV' %>">
					<!-- Ícono ver / ocultar -->
					<span <% if (!navegDia.cantPers) { %>class="invisible"<% } %>><i class="fa-solid fa-circle-plus"></i></span>

					<!-- Código de cliente -->
					<span class="codigo"><% if (!navegDia.cantPers) { %><%= navegDia.persona %><% } %></span>

					<!-- Cantidad de navegaciones -->
					<span class="cantNavegs"><% if (navegDia.cantPers) { %><%= navegDia.cantPers %><% } %></span>
				</td>

				<!-- Fecha -->
				<td class="fecha"><%= navegDia.hora %></td>

				<!-- Ruta -->
				<td class="ruta"><%- navegDia.ruta %></td>
			</tr>
			<% } %>
		</tbody>
	</table>
</section>
